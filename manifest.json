{
  "manifest_version": 2,

  "name": "百度推广屏蔽",
  "description": "移除百度相关页面上推广和广告.",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html",
    "default_title": "百度推广屏蔽"
  },
  "content_scripts": [
    {
      "matches": ["http://*.baidu.com/*","https://*.baidu.com/*"],
      "css": ["css/style.css"],
      "js": ["js/script.js"],
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs","storage"
  ]
}