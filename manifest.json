{
  "manifest_version": 2,

  "name": "百度广告屏蔽",
  "description": "移除百度相关页面上广告和推广.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html",
    "default_title": "百度广告屏蔽"
  },
  "content_scripts": [
    {
      "matches": ["http://*.baidu.com/*","https://*.baidu.com/*"],
      "css": ["css/style.css"],
      "js": ["js/jquery-2.2.3.min.js", "js/script.js"],
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs"
  ]
}